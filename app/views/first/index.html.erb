<h1>Listing samples</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samples.each do |first| %>
      <tr>
        <td><%= first.name %></td>
        <td><%=first.email %></td>
        <td><%= link_to 'Show', first %></td>
        <td><%= link_to 'Edit', edit_sample_path(first) %></td>
        <td><%= link_to 'Destroy', first, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sample', new_sample_path %>
